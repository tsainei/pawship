<div id="feedback-form">
  <h2>Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
      <%# <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-secondary text-decoration-none h6" %> 
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="d-flex flex-column">
      <%# <div class="form-actions"> %>
      <%# <div class="btn-form"> %>
      <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-gray" %>
      <%# </div> %>
      <%# </div> %>
    </div>
  <% end %>
</div>
