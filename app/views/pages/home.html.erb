<div class="row justify-content-center m-2">
  <div class="container text-center">
    <div class="row">
      <div class="logo col d-flex justify-content-center img-fluid">
        <%= image_tag "logo.png"  %>
      </div>
    </div>
  </div>
  <h3 class="font-weight-bold text-center mb-2" style="text-shadow: 1px 1px 3px rgba(0,0,0,0.2);">Light barks between dogs and owners</h3>
  <p class="font-weight-bold text-center" style="text-shadow: 1px 1px 3px rgba(0,0,0,0.2);">Find dog playdates in Zurich!</p>
  <%= image_tag "dogs.png", class: 'dog-img mb-5 mt-5' %>
</div>
<div class=" mt-5 d-flex flex-column">
  <% if user_signed_in? == false %>
    <%= link_to "Login", new_user_session_path, class: 'p-2 btn btn-primary  m-2' %>
    <%= link_to "Sign up", new_user_registration_path, class: 'p-2 btn btn-primary  m-2' %>
    <%= link_to "Browse", dogs_path, class: 'p-2 btn btn-primary  m-2' %>
  <%else%>
    <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'p-2 btn btn-primary  m-2' %>
    <%= link_to "Browse", dogs_path, class: 'p-2 btn btn-primary m-2' %>
  <% end %>
</div>
</div>
</div>
</div>
</div>
