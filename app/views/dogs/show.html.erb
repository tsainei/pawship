<div class="container m-3 mx-auto">
  <h1 class="text-center "><%= @dog.name %></h1>
  <div class="row">
    <div class= "col">
      <div class="card-trip mx-auto mb-4 mt-4 p-3" style="width: 45rem;">
        <% if @dog.photo.present? %>
          <%= cl_image_tag @dog.photo.key, height: 300, width: 400, crop: :fit %>
       <% end %>
        <div class="card-trip-infos">
          <div>
            <p>Age: <%= @dog.birthday %></p>
            <p>Gender: <%= @dog.gender %></p>
            <p>Personality: <%= @dog.personality %></p>
            <p>Sexual orientation: <%= @dog.sex_orientation %></p>

            <p>Breed: <%= @dog.breed %></p>
            <p>Breed certificate: <%= @dog.has_breed_certificate %></p>
            <p>Hobbies: <%= @dog.hobbies %></p>
            <p>Address: <%= @dog.address %></p>
            <p>Owner: <%= @dog.user.email %></p>
          </div>
        </div>

    </div>
  </div>


<br>

  <div class= "col mt-4 position-sticky" style="width: 100%; height: 600px;"
      data-controller="mapbox"
      data-mapbox-markers-value="<%= @markers.to_json %>"
      data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

    <%= link_to dogs_path,  class: 'btn btn-warning mt-3' do %>
    <i class="fa fa-history"></i> Browse again
    <% end %>
</div>
