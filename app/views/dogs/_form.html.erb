<%#  %>

<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name %>
  <%= f.input :age, collection: 1..18 %>
  <%= f.input :gender, collection: ["male", "female"]  %>
  <%= f.input :sex_orientation, collection: ['heterosexual','bisexual','homosexual'] %>
  <%= f.input :short_description %>
  <%= f.input :hobbies %>
  <%= f.input :personality %>
  <%= f.input :training_status %>
  <%# training status should be select, too %>
  <%= f.input :has_breed_certificate %>
  <%# it should be yes or no  f.collection_check_boxes :options, [[true, 'Yes'], [false, 'No']], :first, :last %>
  <%= f.input :breed, collection: BREEDS %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-warning' %>
<% end %>
