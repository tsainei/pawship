<%= simple_form_for(@dog) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name %>
   <%= f.input :birthday, as: :date, html5: true %>
  <%= f.input :gender, collection: ["male", "female", 'other']  %>
  <%= f.input :sex_orientation, collection: ['heterosexual','bisexual','homosexual'] %>
  <%= f.input :short_description, placeholder: 'ex. I am an excellent digger!(min: 50 characters)' %>
  <%= f.input :hobbies %>
  <%= f.input :personality %>
  <%= f.input :training_status, collection: ['trained', 'not trained', 'in training'] %>
  <%= f.input :has_breed_certificate, collection: [[true, 'yes'], [false,'no']]  %>
  <%= f.input :breed, collection: BREEDS %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-warning' %>
<% end %>
