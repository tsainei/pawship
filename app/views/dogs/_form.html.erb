<%= simple_form_for(@dog, data: { turbo: false }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name %>
   <%= f.input :age, collection: ['1m','2m','3m','4m','5m','6m','7m','8m','9m','10m','11m','1yo','2yo','3yo','4yo','5yo','6yo','7yo','8yo','9yo','10yo','11yo','12yo','13yo','14yo','15yo','16yo','17yo','18yo','19yo','20yo'] %>
  <%= f.input :gender, collection: ["male", "female", 'other']  %>
  <%= f.input :sex_orientation, collection: ['heterosexual','bisexual','homosexual'] %>
  <%= f.input :short_description, placeholder: 'ex. I am an excellent digger!(min: 50 characters)' %>
  <%= f.input :hobbies %>
  <%= f.input :personality %>
  <%= f.input :training_status, collection: ['trained', 'not trained', 'in training'] %>
  <%= f.input :has_breed_certificate  %>
  <%= f.input :breed, collection: BREEDS %>
  <%= f.input :address %>
  <%= f.input :photo, as: :file %>
  <%= f.submit class: 'btn btn-primary' %>
<% end %>
