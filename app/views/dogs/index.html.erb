<div class="tinder">
  <%= render 'shared/navbar' %>
  <div class="tinder--status">
  </div>
  <% if @dogs.empty? %>
    <p>there's no dogs!</p>
  <% else %>
    <div class="tinder--cards">
      <% @dogs.each do |dog| %>
        <div class="tinder--card" data-swiped-dog="<%= dog.id %>">
          <%= cl_image_tag(dog.photo.key) %>
          <h3 class="bottom-left"><%= dog.name %>, <%= dog.age %></h3>
          <a href="#popup1"><i class="fa fa-circle-info"></i></a>
          <div id="popup1" class="overlay">
            <div class="popup">
              <h2>Details</h2>
              <a class="close" href="#">&times;</a>
              <div class="content"><p><%= dog.short_description %></p></div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="tinder--buttons">
      <button id="nope"><i class="fa-solid fa-xmark"></i></button>
      <button id="love"><i class="fa-solid fa-paw"></i></button>
    </div>
  <% end %>
</div>
